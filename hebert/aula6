#include <stdio.h>
int main()
{
   
   float moeda[5] = {1.00, 0.50, 0.25, 0.10, 0.05};
   int i;
   for(i=1;i<4;i++)
        printf("\n moeda[%d] = %.2f",i,moeda[i]+moeda[1]);
